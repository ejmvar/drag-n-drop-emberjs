@import 'nib'
@import 'grid'

html, body
  margin 20px
  font-family tahoma, arial, Georgia

/* semantic.gs make the grid fluid */
total-width=100%

/* since it's fluid, let's put a max width and center the content */
#container
  max-width: 960px
  min-height: 480px
  margin-left: auto
  margin-right: auto

.products
  column(6)
  .product
    display block
    width 100px
    border-radius 5px
    background #efefef
    margin-bottom 10px
    valign middle
    padding 4px 10px

.title
  font-weight: bold

.cart
  column(6)
  .basket
    border-radius 10px
    background #eee
    padding 4px
    border: 2px solid #fff
  .dragging
    border: 2px dashed #777
  .drag-enter
    background #ccc

table
  width 100%
  text-align left
  thead
    tr
      border-bottom: 1px solid #999
  td, th
    padding 4px 4px 4px 0px
